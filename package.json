{
  "name": "coinleagues",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare:v2:matic": "mustache config/matic.json subgraph.template.yaml > subgraph.yaml",
    "prepare:v2:bsc": "mustache config/bsc.json subgraph.template.yaml > subgraph.yaml",
    "prepare:nft-v2:matic": "mustache config/nft-matic.json subgraph.template.yaml > subgraph.yaml",
    "deploy:dev": "graph deploy --node https://api.thegraph.com/deploy/ JoaoCampos89/coinleaguesdev",
    "deploy:v2": "yarn prepare:v2:matic && graph deploy --node https://api.thegraph.com/deploy/ JoaoCampos89/coinleaguesv2",
    "deploy:bsc:v2": "yarn prepare:v2:bsc && graph deploy --node https://api.thegraph.com/deploy/ JoaoCampos89/coinleaguebsc",
    "deploy:nft": "yarn prepare:nft-v2:matic && graph deploy --node https://api.thegraph.com/deploy/ JoaoCampos89/coinleagues-nftroom",
    "create-local": "graph create --node http://localhost:8020/ JoaoCampos89/coinleagues",
    "remove-local": "graph remove --node http://localhost:8020/ JoaoCampos89/coinleagues",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 JoaoCampos89/coinleagues"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.22.2",
    "@graphprotocol/graph-ts": "0.22.1",
    "mustache": "^4.2.0"
  }
}
